.form-gap.centered
.container
  .row
    .login-form
      = form_for(@user, url: password_reset_path(params[:id])) do |f|
        %h3.text-center Reset Your Password
        .text-center
          %h3
            .i.fa.fa-lock.fa-2x
          %p
            Enter the new password in the following fields.
          %br
        = hidden_field_tag :email, @user.email
        .password-recovery-input-container
          %i.fa.fa-lock.password-recovery-icon.fa-2x
          = f.password_field :password, placeholder: 'New Password',  class: "password-recovery-input-field" 
        .password-recovery-input-container
          %i.fa.fa-lock.password-recovery-icon.fa-2x                 
          = f.password_field :password_confirmation, placeholder: 'Retype New Password', class: "password-recovery-input-field"
        = f.submit "Update password", class: "password-recovery-btn"
      